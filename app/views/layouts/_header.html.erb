<header class="p-2 mb-2" style="background-color: #ff8c00;">
  <div class="text-center">
    <div>
      <%= link_to root_path do %>
        <%= image_tag '運ノ宮top.png', style: "height: 150px;" %>
      <% end %>
    </div>
    <div class="row mb-2">
      <% if user_signed_in? %>
        <div class="col-3">
          <%= link_to bingos_path, class: "btn btn-light btn-sm" do %>
            Bingo
          <% end %>
        </div>
        <div class="col-3">
          <%= link_to new_omikuji_path, class: "btn btn-light btn-sm" do %>
            おみくじ
          <% end %>
        </div>
        <div class="col-3">
          <%= link_to new_choice_path, class: "btn btn-light btn-sm" do %>
            運試し
          <% end %>
        </div>
        <div class="col-3">
          <%= link_to destroy_user_session_path, class: "btn btn-light btn-sm", method: :delete do %>
            Logout
          <% end %>
        </div>
      <% else %>
        <div class="col-3">
          <%= link_to about_path, class: "btn btn-light btn-sm" do %>
            Abount
          <% end %>
        </div>
        <div class="col-3">
          <%= link_to new_omikuji_path, class: "btn btn-light btn-sm" do %>
            おみくじ
          <% end %>
        </div>
        <div class="col-3">
          <%= link_to new_user_registration_path, class: "btn btn-light btn-sm" do %>
            新規登録
          <% end %>
        </div>
        <div class="col-3">
          <%= link_to new_user_session_path, class: "btn btn-light btn-sm" do %>
            ログイン
          <% end %>
        </div>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <div class="text-center mb-1">
        <%= link_to user_path(current_user), class: "btn btn-secondary" do %>
          <%= current_user.name %>さん
        <% end %>
      </div>
    <% end %>
  </div>
</header>