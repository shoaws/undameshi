<div class="container">
  <div>
    <div class="row mb-3">
      <div class="col-4 text-center">
        <div class="mb-3 font-weight-bold">
          <span class="p-2 border rounded"><%= @user.name %>さん</span>
        </div>
        <div class="my-2">
          <%= link_to 'ユーザー編集', edit_user_path(@user), class: "btn btn-secondary" %>
        </div>
        <div class="my-2">
          <%= link_to 'パスワード変更', user_password_edit_path(@user), class: "btn btn-secondary" %>
        </div>
      </div>
      <div class="col-8">
        今日の運勢:
        <% if @today_omikuji.nil? %>
          占ってみましょう！
        <% else %>
          <span class="h3">
            <%= @today_omikuji.name %>
          </span>
        <% end %>

        <table class="table">
          <% @user_omikujis.each do |omikuji| %>
            <tr>
              <th>
                <%= omikuji.created_at %>
              </th>
              <td>
                <%= omikuji.name %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>