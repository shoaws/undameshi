<div class="container">
  <div class="text-center">
    <h2>編集</h2>
  </div>

  <%= form_with model: @user, url: user_password_update_path do |f| %>

    <div class="field col-10 mx-auto">
      <%= f.label '現在のパスワード' %>
      <%= f.password_field :now_password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field col-10 mx-auto">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field col-10 mx-auto">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions d-flex justify-content-center mt-1 mx-auto">
      <%= f.submit "更新", class: "btn btn-lg btn-outline-success" %>
    </div>
  <% end %>

</div>