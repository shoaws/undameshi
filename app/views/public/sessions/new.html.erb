<div class="container">

  <div class="text-center">
    <h2>ログイン</h2>
  </div>

  <%= form_with model: @user, url: new_user_session_path do |f| %>
    <div class="field col-10 mx-auto">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field col-10 mx-auto">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="actions d-flex justify-content-center mt-1 mx-auto">
      <%= f.submit "Log in", class: "btn btn-lg btn-outline-success" %>
    </div>
  <% end %>

  <%= render "public/shared/links" %>

</div>